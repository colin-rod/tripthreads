{
  "name": "tripthreads",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.18.1 <21",
    "npm": ">=10.8.2 <11"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky",
    "generate-types": "supabase gen types typescript --local > packages/core/src/types/database.ts",
    "generate-types:remote": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > packages/core/src/types/database.ts",
    "rl:analyze-patterns": "tsx scripts/rl-analyze-patterns.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.6",
    "@types/qrcode.react": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.7.4",
    "supabase": "^2.72.4",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "turbo": "^2.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/react-datepicker": "^7.0.0",
    "chrono-node": "^2.9.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "openai": "^6.15.0",
    "posthog-node": "^5.18.1",
    "qrcode.react": "^4.2.0",
    "react-datepicker": "^9.1.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7"
  }
}
