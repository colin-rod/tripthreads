{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "SUPABASE_SERVICE_ROLE_KEY",
        "OPENAI_API_KEY",
        "VAPID_PRIVATE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "FRONTEND_URL",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY"
      ]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
