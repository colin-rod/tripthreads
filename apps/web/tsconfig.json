{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "types": [
      "styled-jsx",
      "@testing-library/jest-dom/jest-globals",
      "@testing-library/jest-dom",
      "jest"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@tripthreads/core": ["../../packages/core/src/index.ts"],
      "@tripthreads/core/validation/profile": ["../../packages/core/src/validation/profile.ts"],
      "@tripthreads/core/validation/trip": ["../../packages/core/src/validation/trip.ts"],
      "@tripthreads/core/*": ["../../packages/core/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "components/features/expenses/settlements/__tests__/**",
    "**/__tests__/**",
    "tests/**"
  ]
}
